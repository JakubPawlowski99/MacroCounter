<!-- AddNewFood.xaml -->

<Window x:Class="MacroCounter.AddNewFood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Food" Height="300" Width="400">
    <Grid>
        <!-- Add labels and textboxes for each food property -->
        <StackPanel>
            <Label Content="Name:"/>
            <TextBox x:Name="NameTextBox"/>

            <Label Content="Calories:"/>
            <TextBox x:Name="CaloriesTextBox"/>

            <Label Content="Protein:"/>
            <TextBox x:Name="ProteinTextBox"/>

            <Label Content="Fats:"/>
            <TextBox x:Name="FatsTextBox"/>

            <Label Content="Carbs:"/>
            <TextBox x:Name="CarbsTextBox"/>

            <!-- Add a Save button -->
            <Button Content="Save" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>